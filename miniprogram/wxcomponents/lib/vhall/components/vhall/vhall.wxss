.vhall-body {
  width: 100%;
}

.vhall-cover {
  width: 100%;
  height: 100%;
}

.vhall-cover .img {
  width: 100%;
  height: 100%;
}

.vhall-cover .vhall-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.vhall-cover .vhall-loading .load-item {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 32px;
  height: 32px;
  margin-left: -16px;
  margin-top: -16px;
  animation: vhallLoading 1s infinite linear;
}

.vhall-cover .vhall-loading .load-item:nth-child(1) {
  animation: vhallLoading1 1s infinite linear;
}

.vhall-cover .vhall-loading .load-item:nth-child(2) {
  animation: vhallLoading2 1s infinite linear;
}

@keyframes vhallLoading1 {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes vhallLoading2 {
  from {
    transform: rotate(360deg);
  }

  to {
    transform: rotate(0);
  }
}

.vhall-body .hide {
  display: none;
}

.tc {
  margin-left: auto;
  margin-right: auto;
}

.vhall-body-item {
  position: relative;
  width: 100%;
  background-color: #000;
}

.vhall-item {
  width: 100%;
  height: 430rpx;
}

.btn-area {
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.btn-area button {
  margin: 30rpx 0;
}

.primary-btn {
  background-color: green;
  color: #fff;
  margin: 20rpx 0;
}

.line {
  width: calc(100% - 10rpx);
  height: 1rpx;
  background-color: #ccc;
  margin: 5rpx;
}

.back {
  display: inline-block;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  color: #333;
  opacity: 0.4;
  z-index: 99999999;
}

.textarea {
  position: absolute;
  top: 300px;
  left: 0;
  background-color: #fff;
  padding: 20px;
  width: 90%;
  font-size: 10px;
  word-break: break-all;
}

.main {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 75rpx;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  padding: 0 20rpx;
}

.font-red {
  color: red;
}

.block {
  display: flex;
  align-items: center;
}

.PlayRate {
  line-height: 75rpx;
  padding: 0 20rpx;
}

.Playing {
  line-height: 75rpx;
  padding: 0 40rpx 0 20rpx;
}

.hide {
  display: none !important;
}

.tool-item {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  width: 250rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.playRateList {
  height: 70rpx;
  width: 100%;
  line-height: 70rpx;
  text-align: center;
}
